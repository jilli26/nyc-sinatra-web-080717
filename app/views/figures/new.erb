<h1>Create a New Figure</h1>
<form method = "POST" action="/figures">
  <input type="text" placeholder="Enter name" name="figure[name]">

  <p>Select the Landmark</p>
    <%@landmarks.each do |lm|%>
      <input type="checkbox" name='figure[landmark_ids][]' value="lm.id"><%=lm.name%> <%=lm.year_completed%></option>
    <%end%>

  <p>Or create a new landmark</p>
  <p>
    <input type="text" placeholder="Enter name" name="landmark[name]">
    <input type="integer" placeholder="Enter year completed" name="figure[landmark_year_completed]">
   </p>

   <p>Select the Title</p>
     <%@titles.each do |t|%>
       <input type="checkbox" name='figure[title_ids][]' value="t.id"><%=t.name%></option>
     <%end%>

   <p>Or create a new title</p>
   <p>
     <input type="text" placeholder="Enter name" name="title[name]">
    </p>
   <input type="submit" value="Create Figure"

</form>
